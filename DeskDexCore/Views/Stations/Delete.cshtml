@model DeskDexCore.Models.Station

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h2>Delete @Html.DisplayFor(model => model.Location)</h2>

    <nav class="breadcrumb my-3">
        @Html.ActionLink("DeskDex", "Index", "Home", null, new { @class = "breadcrumb-item" })
        <span class="breadcrumb-item">Management</span>
        @Html.ActionLink("Station", "Index", "Station", null, new { @class = "breadcrumb-item" })
        @Html.ActionLink(Model.Location, "Details", "Station", new { id = Model.ID }, new { @class = "breadcrumb-item" })
        <span class="breadcrumb-item active">Delete</span>
    </nav>

    <div class="py-1"></div>


    <h3>Are you sure you want to delete this?</h3>
    <div>
        <h4>Station</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.PhysicalAddress)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.PhysicalAddress)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Location)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Location)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Capacity)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Capacity)
            </dd>
        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-outline-primary waves-effect" })
                <input type="submit" value="Delete" class="btn btn-danger" />

            </div>
        }
    </div>
</div>