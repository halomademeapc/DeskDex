@model DeskDexCore.Models.WorkStyle

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h2>Edit @Html.DisplayFor(model => model.Name)</h2>

    <nav class="breadcrumb my-3">
        @Html.ActionLink("DeskDex", "Index", "Home", null, new { @class = "breadcrumb-item" })
        <span class="breadcrumb-item">Management</span>
        @Html.ActionLink("Station Types", "Index", "WorkStyles", null, new { @class = "breadcrumb-item" })
        <span class="breadcrumb-item">@Model.Name</span>
        <span class="breadcrumb-item active">Edit</span>
    </nav>

    <div class="py-1"></div>
    <div class="row justify-content-center">
        <div class="card col-md-6 px-0 overflow-hidden">
            <div class="card-body">


                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    <h4 class="card-title md-form form-group">
                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.LabelFor(model => model.Name)
                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                    </h4>
                    <p class="card-text md-form form-group">
                        @Html.EditorFor(model => model.HexColor, new { htmlAttributes = new { @class = "form-control jscolor {styleElement:'colorband'}", @type = "text" } })
                        @Html.LabelFor(model => model.HexColor)
                        @Html.ValidationMessageFor(model => model.HexColor, "", new { @class = "text-danger" })
                    </p>
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.ID)
                    <div class="text-right">
                        <input type="submit" value="Save" class="btn btn-primary" />
                    </div>
                }
            </div>
            <div class="pb-1" id="colorband"></div>
        </div>
    </div>
</div>


@section Scripts {
    <script src="@Url.Content("~/js/jscolor.min.js")"></script>
    @Scripts.Render("~/bundles/jqueryval")
}
