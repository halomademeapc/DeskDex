@model DeskDexCore.Models.Equipment

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h2>Create Equipment</h2>

    <nav class="breadcrumb my-3">
        @Html.ActionLink("DeskDex", "Index", "Home", null, new { @class = "breadcrumb-item" })
        <span class="breadcrumb-item">Management</span>
        @Html.ActionLink("Equipment", "Index", "Equipment", null, new { @class = "breadcrumb-item" })
        <span class="breadcrumb-item active">Create</span>
    </nav>

    <div class="py-1"></div>
    <div class="row justify-content-center">
        <div class="card col-md-6">
            <div class="card-body">

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    <h4 class="card-title md-form form-group">
                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.LabelFor(model => model.Name)
                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                    </h4>
                    <p class="card-text md-form form-group">
                        @Html.TextAreaFor(model => model.Description, new { @class = "form-control md-textarea" })
                        @Html.LabelFor(model => model.Description)
                        @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                    </p>
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="text-right">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
